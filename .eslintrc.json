{
  "parser": "babel-eslint",
  "plugins": ["jasmine"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jasmine": true
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },
  "extends": ["airbnb", "eslint:recommended", "plugin:jasmine/recommended"],
  "rules": {
    "no-unused-vars": 0,
    "max-len": [
      1,
      80,
      2,
      {
        "ignoreComments": true
      }
    ]
  }
}
